<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/mediaPlayerPlay"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/media_player_play" />

    <SeekBar
        android:id="@+id/mediaPlayerSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mediaPlayerPlay"
        android:layout_toRightOf="@+id/mediaPlayerPlay"
        android:layout_marginBottom="10dp"/>
    
    <ImageButton
        android:id="@+id/mediaPlayerPause"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/mediaPlayerPlay"
        android:layout_below="@+id/mediaPlayerPlay"
        android:scaleType="centerInside"
        android:src="@drawable/media_player_pause" />



</RelativeLayout>